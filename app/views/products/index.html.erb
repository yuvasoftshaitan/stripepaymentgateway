<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table  class="table table-dark table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>PAYMENT</th>
       <th>Sales Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= button_to "Buy now!", checkout_create_path, params: {id: product.id}, remote: true ,class: "btn btn-primary"  %></td>
         <td><%= product.sales_count %></td>
        <td><%= link_to 'Show', product, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_product_path(product),class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

